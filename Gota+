const catalogo = [
  {
    id: 1,
    titulo: "EpisÃ³dio Gratuito",
    url: "https://meusvideos.com/ep1.mp4",
    tipo: "gratuito",
    thumbnail: "https://meusvideos.com/thumbs/ep1.jpg"
  },
  {
    id: 2,
    titulo: "Filme Premium",
    url: "https://meusvideos.com/filme-premium.mp4",
    tipo: "premium",
    thumbnail: "https://meusvideos.com/thumbs/premium.jpg"
  }
];

const catalogoDiv = document.getElementById("catalogo");
const videoPlayer = document.getElementById("videoPlayer");
const playerContainer = document.getElementById("playerContainer");

let premiumAtivo = false; // simula login premium

catalogo.forEach(video => {
  const div = document.createElement("div");
  div.className = "card";
  div.innerHTML = `
    <img src="${video.thumbnail}" alt="${video.titulo}">
    <h3>${video.titulo}</h3>
    <p>${video.tipo === "premium" ? "Premium ðŸ’Ž" : "Gratuito ðŸŽ¬"}</p>
  `;
  div.onclick = () => {
    if (video.tipo === "premium" && !premiumAtivo) {
      alert("Esse conteÃºdo Ã© Premium. FaÃ§a login.");
    } else {
      playerContainer.style.display = "block";
      videoPlayer.src = video.url;
      videoPlayer.play();
    }
  };
  catalogoDiv.appendChild(div);
});
